# THINDOWN USA Website Environment Variables
# Copy this file to .env.local and update with your actual values

# Contact Form API Endpoint
NEXT_PUBLIC_CONTACT_ENDPOINT=https://your-api-endpoint.com/contact

# Sample Request API Endpoint  
NEXT_PUBLIC_SAMPLE_REQUEST_ENDPOINT=https://your-api-endpoint.com/sample-request

# Military Access API Endpoint
NEXT_PUBLIC_MILITARY_ACCESS_ENDPOINT=https://your-api-endpoint.com/military-access

# Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://thindown.us
NEXT_PUBLIC_SITE_NAME=THINDOWN USA

# Email Configuration (for server-side form handling)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@thindown.us

# Database (if needed for form submissions)
DATABASE_URL=postgresql://username:password@localhost:5432/thindown

# Security
NEXTAUTH_SECRET=your-nextauth-secret-key
NEXTAUTH_URL=https://thindown.us

# External Integrations
HUBSPOT_API_KEY=your-hubspot-api-key
SALESFORCE_API_KEY=your-salesforce-api-key

# Development
NODE_ENV=development
